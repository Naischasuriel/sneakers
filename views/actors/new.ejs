<%- include('../partials/header') %>

<div>Please Add Your Favorite Actor Below:</div>
<section id="badge-container">
  <% actors.forEach(function(p) { %>
    <article class="badge"><%= p.name %></article>
  <% }) %>
</section>

<form id="add-actor-form" action="/actors" method="POST">
  <label>Name:</label>
  <input type="text" name="name">
  <input type="submit" value="Add actor">
  
<% actors.forEach(function(p) { %>
  <article class="badge">
    <%= p.name %> 
    <!-- Adding a delete button next to each actor name -->
    <form action="/actors/<%= p._id %>?_method=DELETE" method="POST" onsubmit="return confirm('Are you sure you want to delete this actor?');">
      <input type="submit" value="Delete">
    </form>
  </article>
<% }) %>



<%- include('../partials/footer') %>
