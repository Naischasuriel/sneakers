<%- include('../partials/header') %>

<h2>All the TV shows on the DB:</h2>

<ul>
  <% tvshows.forEach(function(tvshow) { %>
    <li>
      <strong><%= tvshow.title %></strong> (Released in <%= tvshow.releaseYear %>)
      <br>
      MPAA Rating: <%= tvshow.mpaaRating %>
      <br>
      Now Showing: <%= tvshow.nowShowing ? 'Yes' : 'No' %>
      <br>
      <a href="/tvshows/<%= tvshow._id %>">View Details</a>
      <form id="add-review-form" method="POST" action="/tvshows/<%= tvshow._id %>/?_method=DELETE">
        <input type="submit" value="Delete">
    </form>
  <% }) %>
</ul>

<%- include('../partials/footer') %>
